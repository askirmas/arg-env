{
  "display": "Build",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "diagnostics": true,
    "listEmittedFiles": true
  },
  "buildOptions": {
    "incremental": false,
    "verbose": true
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
