FROM alpine:3

ENV ENV_DOCKER=docker/Dockerfile

ENV DOCKER_CATCH_EXPORT=${ENV_EXPORT}
ENV DOCKER_CATCH_INLINE=${ENV_INLINE}
ENV DOCKER_CATCH_INTERNAL_1=${ENV_INTERNAL_1}
ENV DOCKER_CATCH_INTERNAL_2=${ENV_INTERNAL_2}
ENV DOCKER_CATCH_ROOT=${ENV_ROOT}
ENV DOCKER_CATCH_RUN=${ENV_RUN}


ENV DOCKER_OVERRIDE_EXPORT=docker/Dockerfile
ENV DOCKER_OVERRIDE_INLINE=docker/Dockerfile
ENV DOCKER_OVERRIDE_INTERNAL_1=docker/Dockerfile
ENV DOCKER_OVERRIDE_INTERNAL_2=docker/Dockerfile
ENV DOCKER_OVERRIDE_ROOT=docker/Dockerfile
ENV DOCKER_OVERRIDE_RUN=docker/Dockerfile

RUN apk update && apk upgrade && apk add bash

CMD env | grep "_" | sort
